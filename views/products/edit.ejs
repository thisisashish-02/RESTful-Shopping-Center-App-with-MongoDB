<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Product</title>
</head>

<body>
    <h1>Edit Product</h1>
    <form action="/products/<%= product.id %>?_method=PUT" method="POST">
        <label for="name">Product Name</label>
        <input type="text" id="name" name="name" placeholder="product name" value="<%= product.name %>">
        <label for="price">Price</label>
        <input type="number" id="price" name="price" placeholder="price" value="<%= product.price %>">
        <label for="category">Select Category</label>
        <select name="category" id="category">
            <% for (let cat of categories) { %>
            <option value="<%= cat %>" <%= product.category === cat ? 'selected' : '' %>><%= cat %></option>
            <% } %>
        </select>
        <button>Submit</button>
    </form>
    <a href="/products/<%= product._id %>">Cancel</a>
</body>

</html>